generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Cliente {
  id         Int      @id @default(autoincrement())
  nome       String
  cpf        BigInt
  telefone   BigInt
  email      String
  nascimento DateTime?
  password  String
  Pedido     Pedido[]
}

model Funcionario {
  id         Int      @id @default(autoincrement())
  nome       String
  cpf        BigInt
  telefone   BigInt?
  email      String
  nascimento DateTime
   password  String

}

model Ingresso {
  id     Int      @id @default(autoincrement())
  ingresso_disponivel BigInt
  data DateTime
  preco  Decimal
  Pedido Pedido[]
}

model Pedido {
  id            Int      @id @default(autoincrement())
  data          DateTime @default(now())
  valorPago     Decimal
  ingressoUsado BigInt
  ingressoTipo  String
  ingresso      Ingresso @relation(fields: [ingressoId], references: [id])
  ingressoId  Int
  cliente       Cliente  @relation(fields: [clienteId], references: [id])
  clienteId     Int
}